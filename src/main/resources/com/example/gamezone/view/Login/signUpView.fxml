<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="principal" prefHeight="500.0" prefWidth="800.0" stylesheets="@../../css/login.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gamezone.controller.SighUpViewController">
   <children>
      <AnchorPane layoutX="259.0" layoutY="78.0" prefHeight="276.0" prefWidth="282.0">
         <children>
            <Text fill="WHITE" layoutX="80.0" layoutY="17.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign up">
               <font>
                  <Font name="Arial Black" size="30.0" />
               </font>
            </Text>
            <VBox alignment="CENTER" layoutX="53.0" layoutY="49.0" prefHeight="294.0" prefWidth="176.0" spacing="15.0">
               <children>
                  <TextField fx:id="nameSignTxt" prefWidth="110.0" promptText="Name">
                     <font>
                        <Font name="Dubai Regular" size="13.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="EmailSighTxt" prefWidth="110.0" promptText="Email">
                     <font>
                        <Font name="Dubai Regular" size="13.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="PasswordSighTxt" prefWidth="110.0" promptText="Password">
                     <font>
                        <Font name="Dubai Regular" size="13.0" />
                     </font>
                  </TextField>
                  <Button fx:id="RegisterSighButton" mnemonicParsing="false" onAction="#RegisterClient" prefHeight="26.0" prefWidth="74.0" text="Register" />
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="you already have an account?" />
                  <Button fx:id="backSignBtn" mnemonicParsing="false" onAction="#backLogin" text="Back to login" />
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
